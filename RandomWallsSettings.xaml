<Window x:Class="MafeuhLabyWPF.RandomWallsSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MafeuhLabyWPF"
        mc:Ignorable="d"
        Title="RandomWallsSettings"
        SizeToContent="WidthAndHeight">
    <StackPanel HorizontalAlignment="Center">
        <Label Content="Random Walls - Settings" FontSize="18" HorizontalAlignment="Center"/>
        <Separator Height="1"/>
        <Label Content="Current wall frequency:" HorizontalAlignment="Center"/>
        <DockPanel VerticalAlignment="Center" Margin="10">
            <TextBox Text="{Binding ElementName=wallFrequencySlider, Path=Value, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Right"/>
            <Slider x:Name="wallFrequencySlider" Width="206" Maximum="1" Minimum="0.1" TickFrequency="0.1" TickPlacement="TopLeft" IsSnapToTickEnabled="true" HorizontalAlignment="Left"/>
        </DockPanel>
        <Button x:Name="confirmBtn" Content="Confirm" HorizontalAlignment="Center" Click="confirmBtn_Click" Margin="0,0,0,10"/>

    </StackPanel>

</Window>
